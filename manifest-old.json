{
  "name": "Netflix Viewing Activity",
  "description": "This open-source extension automatically retrieves your Netflix viewing activity in JSON or CSV format.",
  "homepage_url": "https://github.com/ramazansancar/netflix-viewing-activity",
  "version": "1.2.1",
  "manifest_version": 3,
  "icons": {
    "128": "src/img/nva-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.netflix.com/*"
      ],
      "run_at": "document_end",
      "js": [
        /*"src/js/test.js",*/
        "src/js/inject.js",
        "src/js/content.js",
        "src/js/lib/jquery.min.js",
        "src/js/lib/papaparse.min.js"
      ],
      "css": [
        "src/css/main.css",
        "src/css/buttons.css",
        "src/css/loader.css"
      ]
    }
  ],
  "background": {
    "service_worker": "src/js/content.js"
  },
  "externally_connectable": {
    "matches": [
      "*://*.netflix.com/*"
    ]
  },
  "host_permissions": [
    "*://*.netflix.com/*"
  ],
  "permissions": [
    "cookies",
    "scripting"
  ],
  "web_accessible_resources": [{
    "resources": [
      /*"src/js/test.js",*/
      "src/js/inject.js",
      "src/css/main.css",
      "src/css/loader.css",
      "src/css/buttons.css",
      "src/js/lib/jquery.min.js",
      "src/js/lib/papaparse.min.js"
    ],
    "matches": [
      "*://*.netflix.com/*"
    ],
    "extension_ids": [
      "*"
    ]
  }]
}
